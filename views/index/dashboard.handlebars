<h1>Welcome, {{user.firstName}}</h1>
<h4>Your Stories</h4>
<div class="row">
  <div class="col s12">
    {{#if stories}}
      <table class="striped">
        <thead>
          <tr>
            <th>Story Title</th>
            <th>Publishing Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each stories}}
            <tr>
              <td><a href="/stories/show/{{_id}}">{{title}}</a></td>
              <td>{{formatDate date "Do MMMM YYYY"}}</td>
              <td><span class="dash-status">{{status}}</span></td>
              <td>
                <a href="/stories/edit/{{_id}}" class="btn left-align blue darken-2"><i class="fa fa-pencil"></i> Edit</a>
                <form action="/stories/delete/{{_id}}?_method=DELETE" method="POST" id="delete-form">
                  <button type="submit" class="btn red darken-2"><i class="fa fa-remove"></i> Delete</button>
                </form> 
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No Stories Added</p>
    {{/if}}
  </div>
</div>